extend type Query {
    findAllArticles: [Article]
    findAllArticlesFilterBy(filter: FilterArticleEnum!, value: FilterArticleInput!): [Article]
}

extend type Mutation {
    createArticle(article: ArticleInput!): Article
}

input ArticleInput {
    id: ID!
    url: String!
    owner: String!
    sharedBy: String
    tags: [String]
    suggestedTags: [String]
}

input FilterArticleInput {
    id: String
    url: String
    owner: String
    sharedBy: String
    tag: String
    suggestedTag: String
}

enum FilterArticleEnum {
    id
    url
    owner
    sharedBy
    tag
    suggestedTag
}

type Article {
    id: ID!
    url: String!
    owner: String!
    sharedBy: String
    tags: [String]
    suggestedTags: [String]
}